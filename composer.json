{
    "name": "designbymalina/dbmframework",
    "description": "DbM Framework",
    "keywords": ["dbm framework", "php framework", "framework", "php"],
    "homepage": "https://github.com/designbymalina/dbmframework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur Malinowski",
            "homepage": "https://dbm.org.pl",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpmailer/phpmailer": "^6.6",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "classmap": [
            "application/"
        ],
        "psr-4": {
            "App\\": "src/",
            "Dbm\\": "application/",
            "Lib\\": "application/Libraries/",
            "Mod\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
